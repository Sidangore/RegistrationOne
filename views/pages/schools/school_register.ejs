<%- include('../../partials/header.ejs', {user: "School", register_link: "/schools/register", login_link: "/schools/login"})  %>
    <div class="container card rounded" style="margin-top: 5%;">
        <div class="card-body">
            <form class="row g-3" method="POST" action="/schools/register">
                <!-- name -->
                <div class="col-md-4">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="" required>
                </div>

                <!-- identification number -->
                <div class="col-md-4">
                    <label for="identification_number" class="form-label">Identification Number</label>
                    <input type="number" class="form-control" name="identification_number" id="identification_number" value="" required>
                </div>

                <!-- email -->
                <div class="col-md-4">
                    <label for="validationDefaultUsername" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text" id="email">@</span>
                        <input type="text" class="form-control" id="email" name="email" aria-describedby="inputGroupPrepend2" required>
                    </div>
                </div>

                <!-- password -->
                <div class="col-md-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <!-- year of establishment -->
                <div class="col-md-4">
                    <!-- Date input -->
                    <label class="form-label" for="year_of_establishment">Year of Establishment</label>
                    <input class="form-control" id="year_of_establishment" name="year_of_establishment" placeholder="YYYY" type="number" />
                </div>

                <!-- seats available -->
                <div class="col-md-4">
                    <label class="form-label" for="seats_available">Seats Available</label>
                    <input class="form-control" id="seats_available" name="seats_available" type="number" />
                </div>

                <!-- type -->
                <div class="col-md-4">
                    <label for="type" class="form-label">Type</label>
                    <!-- <input type="text" class="form-control" id="type" name="type" required> -->
                    <select class="form-select" aria-label="Default select example" id="type" name="type" required>
                        <!-- <option selected>Open this select menu</option> -->
                        <option  value="Government">Government School</option>
                        <option value="Aided">Government aided Private School</option>
                        <option selected value="Private">Private School</option>
                        <option value="National">National School</option>
                        <option value="International">International School</option>
                        <option value="Home">Home School</option>
                      </select>
                </div>

                <!-- affiliation -->
                <div class="col-md-4">
                    <label for="affiliation" class="form-label">Affiliation</label>
                    <!-- <input type="text" class="form-control" id="affiliation" name="affiliation" required> -->
                    <select class="form-select" aria-label="Default select example" id="affiliation" name="affiliation" required>
                        <!-- <option selected>Open this select menu</option> -->
                        <option  value="State">State Board</option>
                        <option value="ICSE">Indian Certificate of Secondary Education (ICSE)</option>
                        <option selected value="CBSE">Central Board of Secondary Education (CBSE)</option>
                        <option value="CISCE">Council for the Indian School Certificate Examination (CISCE)</option>
                        <option value="NIOS">National Institute of Open Schooling (NIOS)</option>
                        <option value="IB">International Baccalaureate (IB)</option>
                        <option value="CIE">Cambridge International Examinations (CIE)</option>
                      </select>
                </div>

                <!-- <div class="col-md-3">
                <label for="password" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div> -->

                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                        <label class="form-check-label" for="invalidCheck2">
                  Agree to terms and conditions
                </label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Register your School</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>